{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur - BibliothèqueOnline{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Tableau de bord administrateur</h1>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Livres</h5>
                    <p class="card-text display-4">{{ stats.totalBooks }}</p>
                    <a href="{{ path('admin_books') }}" class="btn btn-sm btn-light">Gérer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Utilisateurs</h5>
                    <p class="card-text display-4">{{ stats.totalUsers }}</p>
                    <a href="{{ path('admin_users') }}" class="btn btn-sm btn-light">Gérer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Réservations actives</h5>
                    <p class="card-text display-4">{{ stats.activeReservations }}</p>
                    <a href="{{ path('admin_reservations') }}" class="btn btn-sm btn-light">Gérer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Avis en attente</h5>
                    <p class="card-text display-4">{{ stats.pendingReviews }}</p>
                    <a href="{{ path('admin_reviews') }}" class="btn btn-sm btn-light">Modérer</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Actions rapides</h5>
                </div>
                <div class="card-body">
                   <div class="list-group">
                           <a href="{{ path('admin_book_new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle me-2"></i>Ajouter un nouveau livre
                        </a>
                        <a href="{{ path('admin_categories') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-tags me-2"></i>Gérer les catégories
                        </a>
                        <a href="{{ path('admin_authors') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-edit me-2"></i>Gérer les auteurs
                        </a>
                        <a href="{{ path('admin_languages') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-language me-2"></i>Gérer les langues
                        </a>
                        <a href="{{ path('admin_users') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-users-cog me-2"></i>Gérer les utilisateurs
                        </a>
                        <a href="{{ path('admin_reviews') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-tasks me-2"></i>Modérer les avis
                        </a>
                        <a href="{{ path('admin_reservations') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-exchange-alt me-2"></i>Gérer les réservations
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Avis en attente de modération</h5>
                </div>
                <div class="card-body">
                    {% if stats.pendingReviews == 0 %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>Aucun avis en attente de modération.
                        </div>
                    {% else %}
                        <p>Il y a <strong>{{ stats.pendingReviews }}</strong> avis en attente de modération.</p>
                        <a href="{{ path('admin_reviews') }}" class="btn btn-primary">
                            <i class="fas fa-tasks me-2"></i>Modérer les avis
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}